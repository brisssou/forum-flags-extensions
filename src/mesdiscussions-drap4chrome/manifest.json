 {
  "manifest_version": 2,
  "name": "Mes Discussions - Mes sujets",
  "version": "@VERSION@",
  "description": "Vérifie si les sujets drapalisés sur forum de mes discussions ont de nouveaux messages.",
  "background": {
    "page": "bg.html"
  },
  "options_page": "options.html",
  "default_locale": "fr",
  "browser_action": {
    "default_icon": "images/flag.gif",
    "badge": ""
  },
  "icons": { "128": "images/128.png", "48": "images/48.png", "16": "images/icon.png" },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://www.mesdiscussions.net/"
  ]
}
